<Application x:Class="magistr.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:magistr"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3F47CC"/>
            <Setter Property="Foreground" Value="#FEEBA7"/>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#FBECAA"/>
        </Style>
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#FEEBA7"/>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="#FEEBA7"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Application.Resources>
</Application>
