        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="2" Background="Green">
            <Label Content="25"  FontSize="20" HorizontalAlignment="Center"/>
            <Label Content="1C"  FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="3" VerticalAlignment="Center">
            <Label Content="26" HorizontalAlignment="Center" FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="4" VerticalAlignment="Center">
